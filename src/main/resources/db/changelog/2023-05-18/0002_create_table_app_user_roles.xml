<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="0002-1" author="Patryk Depka">
        <createTable tableName="app_user_roles">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="app_user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0002-2" author="Patryk Depka">
        <addForeignKeyConstraint baseTableName="app_user_roles"
                                 baseColumnNames="app_user_id"
                                 constraintName="fk_app_user_roles_app_user"
                                 referencedTableName="app_user"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>