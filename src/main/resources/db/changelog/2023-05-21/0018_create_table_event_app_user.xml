<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="0018-1" author="Patryk Depka">
        <createTable tableName="events_app_users">
            <column name="event_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="app_user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0018-2" author="Patryk Depka">
        <addForeignKeyConstraint baseTableName="events_app_users"
                                 baseColumnNames="event_id"
                                 constraintName="fk_events_app_users_event"
                                 referencedTableName="event"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>